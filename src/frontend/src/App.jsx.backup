import React from 'react'
import { BrowserRouter, Routes, Route, Navigate } from 'react-router-dom'
import { ThemeProvider } from './contexts/ThemeContext'
import OrderingInterface from './pages/customer/ordering/OrderingInterface'

function App() {
	return (
		<ThemeProvider>
			<BrowserRouter>
				<Routes>
					{/* Direct route to OrderingInterface without authentication */}
					<Route path="/order/:tenantId/table/:tableId" element={<OrderingInterface />} />
					{/* Redirect root to a test order page */}
					<Route
						path="/"
						element={<Navigate to="/order/test-tenant-id/table/test-table-id" replace />}
					/>
					{/* Catch all - redirect to test order */}
					<Route
						path="*"
						element={<Navigate to="/order/test-tenant-id/table/test-table-id" replace />}
					/>
				</Routes>
			</BrowserRouter>
		</ThemeProvider>
	)
}

export default App


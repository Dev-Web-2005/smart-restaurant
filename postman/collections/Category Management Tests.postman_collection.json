{
	"info": {
		"name": "Category Management - Complete Test Suite",
		"description": "Comprehensive tests for Smart Restaurant Category Management API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000"
		},
		{
			"key": "tenant_id",
			"value": "your-tenant-uuid-here"
		},
		{
			"key": "token",
			"value": "your-jwt-token-here"
		},
		{
			"key": "category_id",
			"value": ""
		}
	],
	"item": [
		{
			"name": "1. Create Category - Success",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": "{{base_url}}/tenants/{{tenant_id}}/categories",
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Appetizers\",\n  \"description\": \"Start your meal right\",\n  \"status\": 1,\n  \"displayOrder\": 10\n}"
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response has category id', function () {",
							"  const jsonData = pm.response.json();",
							"  pm.expect(jsonData.data).to.have.property('id');",
							"  pm.collectionVariables.set('category_id', jsonData.data.id);",
							"});",
							"",
							"pm.test('Category has correct status', function () {",
							"  const jsonData = pm.response.json();",
							"  pm.expect(jsonData.data.status).to.eql(1);",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "2. Create Category - Duplicate Name (Should Fail)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": "{{base_url}}/tenants/{{tenant_id}}/categories",
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Appetizers\",\n  \"status\": 1\n}"
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 409 Conflict', function () {",
							"  pm.response.to.have.status(409);",
							"});",
							"",
							"pm.test('Error code is 3004', function () {",
							"  const jsonData = pm.response.json();",
							"  pm.expect(jsonData.code).to.eql(3004);",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "3. Create Category - Invalid Name Length (Should Fail)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": "{{base_url}}/tenants/{{tenant_id}}/categories",
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"A\",\n  \"status\": 1\n}"
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 400', function () {",
							"  pm.response.to.have.status(400);",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "4. Get All Categories",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": "{{base_url}}/tenants/{{tenant_id}}/categories"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response is an array', function () {",
							"  const jsonData = pm.response.json();",
							"  pm.expect(jsonData.data).to.be.an('array');",
							"});",
							"",
							"pm.test('Categories have itemCount', function () {",
							"  const jsonData = pm.response.json();",
							"  if (jsonData.data.length > 0) {",
							"    pm.expect(jsonData.data[0]).to.have.property('itemCount');",
							"  }",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "5. Get Active Categories Only",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/tenants/{{tenant_id}}/categories?status=1",
					"query": [
						{
							"key": "status",
							"value": "1"
						}
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('All categories have status 1', function () {",
							"  const jsonData = pm.response.json();",
							"  jsonData.data.forEach(category => {",
							"    pm.expect(category.status).to.eql(1);",
							"  });",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "6. Search Categories",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/tenants/{{tenant_id}}/categories?search=app",
					"query": [
						{
							"key": "search",
							"value": "app"
						}
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Search results contain search term', function () {",
							"  const jsonData = pm.response.json();",
							"  jsonData.data.forEach(category => {",
							"    pm.expect(category.name.toLowerCase()).to.include('app');",
							"  });",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "7. Sort by Name ASC",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/tenants/{{tenant_id}}/categories?sortBy=name&sortOrder=ASC",
					"query": [
						{
							"key": "sortBy",
							"value": "name"
						},
						{
							"key": "sortOrder",
							"value": "ASC"
						}
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Categories are sorted alphabetically', function () {",
							"  const jsonData = pm.response.json();",
							"  const names = jsonData.data.map(c => c.name);",
							"  const sortedNames = [...names].sort();",
							"  pm.expect(names).to.eql(sortedNames);",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "8. Sort by Display Order",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": {
					"raw": "{{base_url}}/tenants/{{tenant_id}}/categories?sortBy=displayOrder&sortOrder=ASC",
					"query": [
						{
							"key": "sortBy",
							"value": "displayOrder"
						},
						{
							"key": "sortOrder",
							"value": "ASC"
						}
					]
				}
			}
		},
		{
			"name": "9. Update Category",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": "{{base_url}}/tenants/{{tenant_id}}/categories/{{category_id}}",
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Premium Appetizers\",\n  \"description\": \"Gourmet starters\",\n  \"displayOrder\": 5\n}"
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Category name was updated', function () {",
							"  const jsonData = pm.response.json();",
							"  pm.expect(jsonData.data.name).to.eql('Premium Appetizers');",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "10. Update Category Status to Inactive",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": "{{base_url}}/tenants/{{tenant_id}}/categories/{{category_id}}/status",
				"body": {
					"mode": "raw",
					"raw": "{\n  \"status\": 0\n}"
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Category status is 0', function () {",
							"  const jsonData = pm.response.json();",
							"  pm.expect(jsonData.data.status).to.eql(0);",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "11. Update Category Status to Active",
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"url": "{{base_url}}/tenants/{{tenant_id}}/categories/{{category_id}}/status",
				"body": {
					"mode": "raw",
					"raw": "{\n  \"status\": 1\n}"
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Category status is 1', function () {",
							"  const jsonData = pm.response.json();",
							"  pm.expect(jsonData.data.status).to.eql(1);",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "12. Delete Category",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": "{{base_url}}/tenants/{{tenant_id}}/categories/{{category_id}}"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"  pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Success message returned', function () {",
							"  const jsonData = pm.response.json();",
							"  pm.expect(jsonData.message).to.include('deleted successfully');",
							"});"
						]
					}
				}
			]
		},
		{
			"name": "13. Verify Category is Soft Deleted",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{token}}"
					}
				],
				"url": "{{base_url}}/tenants/{{tenant_id}}/categories"
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Deleted category not in list', function () {",
							"  const jsonData = pm.response.json();",
							"  const deletedId = pm.collectionVariables.get('category_id');",
							"  const found = jsonData.data.find(c => c.id === deletedId);",
							"  pm.expect(found).to.be.undefined;",
							"});"
						]
					}
				}
			]
		}
	]
}

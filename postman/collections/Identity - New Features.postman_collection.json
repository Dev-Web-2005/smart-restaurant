    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Forgot Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"user@example.com\"\n}"
                        },
                        "url": {
                            "raw": "{{baseURL}}/api/v1/identity/auth/forgot-password",
                            "host": [
                                "{{baseURL}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "identity",
                                "auth",
                                "forgot-password"
                            ]
                        }
                    }
                },
                {
                    "name": "Reset Password",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"{{resetToken}}\",\n  \"newPassword\": \"NewPassword123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseURL}}/api/v1/identity/auth/reset-password",
                            "host": [
                                "{{baseURL}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "identity",
                                "auth",
                                "reset-password"
                            ]
                        }
                    }
                },
                {
                    "name": "Login with Owner (Customer/Staff/Chef)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('accessToken', response.data.accessToken);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"staff_username\",\n  \"password\": \"password123\"\n}"
                        },
                        "url": {
                            "raw": "{{baseURL}}/api/v1/identity/auth/login/:ownerId",
                            "host": [
                                "{{baseURL}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "identity",
                                "auth",
                                "login",
                                ":ownerId"
                            ],
                            "variable": [
                                {
                                    "key": "ownerId",
                                    "value": "{{ownerId}}",
                                    "description": "Restaurant owner's userId"
                                }
                            ]
                        }
                    }
                }
            ]
        },
